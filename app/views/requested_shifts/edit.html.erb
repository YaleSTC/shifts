<h1>Editing your shift request</h1>

<%= form_for(@requested_shift) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', template_requested_shift_path(@week_template, @requested_shift) %> |
<%= link_to 'Back', template_path(@week_template) %>
