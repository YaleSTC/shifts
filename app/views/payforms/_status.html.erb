<fieldset> 
  <legend><font size=3><strong>Status:</strong> <%=h @payform.status.capitalize %></font></legend>
  <strong>Created:</strong> <%=h @payform.created_at.strftime(date_format + " at " + time_format) %><br/>
<% if @payform.submitted -%>
  <strong>Submitted:</strong> <%=h @payform.submitted.strftime(date_format + " at " + time_format) %><br/>
<% end -%>

<% if @payform.submitted and current_user.is_admin_of?(@payform.department) -%>
 <% form_for @payform, :html=>{:id=>"payform_form"} do |f| %>
  <strong>Print Payform:</strong><br/>
  <%= check_box "payform", "print_payform", {}, true, false %>
 <div class='update_left'>
  <p><%= f.submit "Update Payform" %></p>
</div>
<% end %>
<% end -%>

<% if @payform.approved and current_user.is_admin_of?(@payform.department) -%>
  <strong>Approved:</strong> <%=h @payform.approved.strftime(date_format + " at " + time_format) %> by <%=h @payform.approved_by.name %><br/>
<% end -%>
<% if @payform.archived -%>
  <strong>Archived:</strong> <%= @payform.archived.strftime(date_format + " at " + time_format) %><br/>
  <em><%=@payform.department.department_config.printed_message%></em><br/>
<%end -%>
<% if @payform.hours > current_department.department_config.payform_time_limit %>
	<% if @payform.user != current_user %>
	<h3><font color='red'><%= "#{@payform.user.name} has listed more than the allowed #{current_department.department_config.payform_time_limit} hours"%></font></h3>
	<% else %>
	<h3><font color='red'><%= "You have listed more than the allowed #{current_department.department_config.payform_time_limit} hours"%></font></h3>
	<% end %>
<% end %>
</fieldset>
