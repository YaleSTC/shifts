<% title "Locations" %>
<% for group in @department.loc_groups %>
  <table class="manage_table">
    <caption><%= group.name %></caption>
    <thead>
      <tr>
        <th width="30%">Long Name</th>
        <th>Short Name</th>
        <th>Report Email</th>
        <th>Max Staff</th>
        <th>Priority</th>
        <th>Min Staff</th>
				<th>Active</th>
      </tr>
    </thead>
    <tbody>
      <%- group.locations.sort_by{ |loc| [- loc.priority, loc.name] }.each do |loc| -%>
        <tr>
          <td><%= link_to loc.name, edit_location_path(loc) %></td>
          <td><%= loc.short_name %></td>
          <td><%= loc.report_email ? loc.report_email : "-" %></td>
          <td><%= loc.max_staff %></td>
          <td><%= loc.priority %></td>
          <td><%= loc.min_staff %></td>
					<td><%= loc.active %></td>
					<td><%= button_to 'Activate/Deactivate', :action => 'switch', :id => loc %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% end -%>  
<br />
<%= render :partial => 'form', :locals => {:title => "Create a new location"} %>

