<% for user_profile in @user_profiles %>
  <tr>
  	<td><%= link_to "#{user_profile.user.name}", user_profile_path(user_profile.user.login) %></td>
		<% unless mobile_device?%>
		<% for upf in @user_profile_fields %>
			<td>
				<%= user_profile.user_profile_entries.where(:user_profile_field_id => upf.id).first().content rescue "" %>
			</td>
		<% end %>
		<% end %>
  </tr>
<% end %>