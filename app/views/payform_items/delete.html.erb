<% title "Destroy Payform Item" %>

<%= form_for @payform_item, html: {method: :delete} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :reason %><br />
    <%= f.text_area :reason, cols: 80, rows: 5 %>
  </p>
  <p><%= f.submit "Delete" %></p>
<% end %>


<% unless params[:layout] == "false" %>
  <p>
    <%= link_to "Show", @payform_item %> |
    <%= link_to "View All", payform_path(@payform_item.payform) %>
  </p>
<% end %>


