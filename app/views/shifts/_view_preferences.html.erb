<div id="preferences" style="float:right;position:relative;width:160px;text-align:right">
  <h2 class="only_js trigger" style="display:none;">Show/Hide Groups</h2>
  <div class="no_js" style="position:absolute;background:#fff;border:#ccc 1px solid;width:160px;z-index:999;text-align:left;padding-left:10px;">
    <%= form_for current_user.user_config do |f| %>
      <p>
          <div class="multiple_select">
            <h3><%= current_department.name %></h3>
            <%= collection_multiple_select(:user_config, :view_loc_groups, 
                                        @loc_group_select[current_department.id], :id, :name,
                                        :selected_items => @selected_loc_groups) %>
          </div>
      </p>
      <%= hidden_field_tag :redirect_to, request.url %>
      <p><%= f.submit "Submit" %></p>
    <% end %>
  </div>
<br /><%= link_to "Subscribe to this Feed!", calendar_feeds_path %>
</div>

