<fieldset class="announcement", title= "<%= "Posted on #{announcement.start_time.to_date} at #{announcement.start_time.to_s(:am_pm)}" %>" >
  <% if current_user.is_admin_of?(current_department) %>
    <div class="right">
      <%= link_to 'Edit', edit_notice_path(announcement, :width => 530, :height => 530), :title => "Edit Announcement", :class => "thickbox", :id => "edit" %>
      <%= link_to '[x]', { :controller => 'notices', :action => 'destroy', :id => announcement.id },
                           :confirm => "Are you sure you want to remove this announcement?",
                           :method => :delete %>
    </div>
  <% end %>

  <%= announcement.content_with_formatting %> <br />
  <div class="grayleft">
    <%= "by #{(announcement.author.name)}" -%>
  </div>
</fieldset>

