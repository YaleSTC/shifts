<% title "Sub Requests" %>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Mandatory Start</th>
    <th>Mandatory End</th>
    <th>User Sources</th>
	<th>Requestor</th>
    <th>Reason</th>
  </tr>

<% @sub_requests.each do |sub_request| %>
  <tr>
    <td><%=h sub_request.start.to_s(:long) %></td>
    <td><%=h sub_request.end.to_s(:long) %></td>
    <td><%=h sub_request.mandatory_start.to_s(:long) %></td>
    <td><%=h sub_request.mandatory_end.to_s(:long) %></td>
    <td><%= render :partial => 'list_user_sources'%></td>
	<td><%=h sub_request.shift.user %>    <!--- Bay: make email address  -->
    <td><%=h sub_request.reason %></td>
    <td><%= link_to 'Show', sub_request %></td>
    <td><%= link_to 'Edit', edit_sub_request_path(sub_request) %></td>
    <td><%= link_to 'Destroy', sub_request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

