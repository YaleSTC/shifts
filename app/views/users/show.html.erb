<% title "User" %>

<p>
  <strong>Login:</strong>
  <%=h @user.login %>
</p>
<p>
  <strong>Active:</strong>
  <%=h @user.is_active?(@department) %>
</p>
<p>
  <strong>First Name:</strong>
  <%=h @user.first_name %>
</p>
<p>
  <strong>Last Name:</strong>
  <%=h @user.last_name %>
</p>
<p>
  <strong>Nickname:</strong>
  <%=h @user.nick_name %>
</p>
<p>
  <strong>Employee ID:</strong>
  <%=h @user.employee_id %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= deactivate_link(@user) %> |
  <%= link_to "Destroy", :action => :really_destroy, :id => @user %> |
  <%= link_to "View All", department_users_path(@department) %>
</p>

